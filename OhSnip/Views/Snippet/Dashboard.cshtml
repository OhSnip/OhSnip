</nav>

<span id="openButton" onclick="openNav()"><i class="glyphicon glyphicon-ice-lolly-tasted"></i>Languages</span>
<div id="main" class="main">
    <h2>Welcome!</h2>

    <form asp-controller="Snippet" asp-action="Dashboard" method="post">
        <div class="input-group col-xs-12 col-md-6">
            <input type="text" class="form-control" placeholder="Search" />
            <div class="input-group-btn">
                <button type="submit" class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i> 
                </button>
            </div>
        </div>
    </form>
    <a href="/AddSnippet">Add new!</a>

    <div>
        <h3>Snippet Title</h3>
        <p>Description</p>
        <button type="button">Edit</button>
        <button type="button">Copy</button>
    </div>
</div>

<table>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Code</th>
        
    </tr>

    @foreach (var snip in @ViewBag.allsnippets)
    {
        <tr>
            <td>@snip.SnippetId</td>
            <td>@snip.Title</td>
            <td>@snip.Code</td>
            <td>@snip.Link</td>
            <td><a href="/EditSnippet/@snip.SnippetId">Edit</a></td>
            <td><a href="/DeleteSnippet/@snip.SnippetId">Delete</a></td>

        </tr>
    }
</table>

