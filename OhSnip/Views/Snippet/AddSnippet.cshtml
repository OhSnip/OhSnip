@model OhSnip.Models.SnippetViewModels.DetailViewModel

@{
    ViewData["Title"] = "Add Snippet";
}

<h2>Add Snippet</h2>

<form asp-controller="Snippet" asp-action="Create" method="post">
    <label asp-for="Title">Title</label>
    <input asp-for="Title" />
    <label asp-for="Description">Description</label>
    <input asp-for="Description" />
    <select asp-for="Language" asp-items="Model.Languages"></select>
    <textarea asp-for="Code" placeholder="Add new code or snippet here."></textarea>
    <label asp-for="Link">Source</label>
    <input asp-for="Link" />
    <button type="submit">Add Snippet</button>
</form>

