@model OhSnip.Models.DetailViewModel

@{
    ViewData["Title"] = "EditSnippet";
}

<h2>EditSnippet</h2>

<form asp-controller="Snippet" asp-action="AddSnippet" method="post">
    <label asp-for="Title">Title</label>
    <input asp-for="Title" />
    <label asp-for="Description">Description</label>
    <input asp-for="Description" />
    <select asp-for="Language" asp-items="Model.Languages"></select>
    <textarea asp-for="Code" placeholder="Add new code or snippet here."></textarea>
    <button type="submit">Edit Snippet</button>
</form>


