@model OhSnip.Models.SnippetViewModels.DetailViewModel

@{
    ViewData["Title"] = "Edit Snippet";
}

<h2>Edit Snippet</h2>

@foreach (var snip in @ViewBag.snippettoedit)
{
    <form asp-controller="Snippet" asp-action="Edit" method="post">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" value="@snip.Title"/>
        <label asp-for="Description">Description</label>
        <input asp-for="Description" value="@snip.Description"/>
        <select asp-for="Language" asp-items="Model.Languages"></select>
        <textarea asp-for="Code" value="@snip.Code"></textarea>
        <input type="hidden" name="SnippetId" value="@snip.SnippetId" />
        <label asp-for="Link">Source</label>
        <input asp-for="Link" value="@snip.Link" />
        <button type="submit">Edit Snippet</button>
    </form>
}


