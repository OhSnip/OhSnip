@model OhSnip.Models.SnippetViewModels.DetailViewModel

@{
    ViewData["Title"] = "Edit Snippet";
}

<h2>Edit Snippet</h2>

@foreach (var snip in @ViewBag.snippettoedit)
{
    <form asp-controller="Snippet" asp-action="Edit" method="post" class="col-xs-4">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" value="@snip.Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" value="@snip.Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Language">Language</label>
            <select asp-for="Language" asp-items="Model.Languages" class="form-control"></select>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Code">Code</label>
            <textarea name="Code" class="form-control">@snip.Code</textarea>
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Link">Source</label>
            <input asp-for="Link" value="@snip.Link" class="form-control" />
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>
        <input type="hidden" name="SnippetId" value="@snip.SnippetId" />
        <div class="form-group">
            <button type="submit" class="btn btn-default">Update</button>
        </div>
    </form>
}